{
  "name": "nelson-wp",
  "version": "1.0.0",
  "description": "",
  "main": "_src/js/main.js",
  "config": {
    "dev_url": "http://www.40digits.com",
    "prod_url": "http://www.40digits.com"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run watch & browser-sync start --files \"!node_modules\" --files \"**/*.php\" --files \"./wp-content/themes/castle-wood-reserve/assets/**/*\" --proxy l.castle-wood-reserve --no-notify",
    "open:local": "opener l.castle-wood-reserve",
    "open:dev": "opener http://castle-wood-reserve.dev01.40digits.net",
    "open:prod": "opener http://www.40digits.com",
    "build": "parallelshell \"npm run build:images\" \"npm run build:js\" \"npm run build:sass\" \"npm run build:sprites\" \"npm run build:symbols\"",
    "watch": "parallelshell \"npm run watch:images\" \"npm run watch:js\" \"npm run watch:sass\" \"npm run watch:sprites\" \"npm run watch:symbols\"",
    "build:images": "imagemin -p -o 4 ./_src/images ./assets/images",
    "watch:images": "chokidar \"./_src/images/**/*\" -c \"npm run build:images\"",
    "build:js": "webpack -d --progress --config ./_src/js/webpack.config.js --output-path ./assets/js",
    "watch:js": "webpack -d --progress --watch --config ./_src/js/webpack.config.js --output-path ./assets/js",
    "build:sass": "cd ./_src/sass && npm run build -- --output_dir ../..",
    "watch:sass": "chokidar \"./_src/sass/**/*.scss\" -c \"npm run build:sass\"",
    "build:sprites": "sprity create \"./assets/images/sprites\" \"./_src/sprites/images/**/*.png\" --css-path assets/images/sprites --split --prefix sprite --dimensions 1:72 -d 2:192 --margin 5 --template ./_src/sprites/templates/scss.hbs --style ../../../_src/sass/util/_sprites.scss",
    "watch:sprites": "chokidar \"./_src/sprites/images/**/*.png\" -c \"npm run build:sprites\"",
    "build:symbols": "svg-sprite --dest ./assets/images/sprites --symbol --symbol-dest \"symbols.svg\" --symbol-sprite . ./_src/symbols/**/*.svg",
    "watch:symbols": "chokidar \"./_src/symbols/**/*.svg\" -c \"npm run build:symbols\""
  },
  "repository": "",
  "author": "40Digits",
  "contributors": [
    {
      "name": "David Harris",
      "email": "david.harris@40digits.com"
    }
  ],
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "browser-sync": "^2.12.5",
    "chokidar-cli": "^1.2.0",
    "ejs-loader": "^0.3.0",
    "imagemin-cli": "^2.1.0",
    "opener": "^1.4.1",
    "parallelshell": "^2.0.0",
    "sprity-cli": "^1.0.1",
    "svg-sprite": "^1.2.19",
    "threepio": "^1.0.0",
    "webpack": "^1.13.0"
  }
}
